<section id="ranking" class="home-section">
  <div class="container">
    <p class='text-ranking'><B>にんきなねこさんたち</B></p>
    <div class="row">
      <% @fav_cats.each_with_index do |fav_cat, index| %>
        <% if index.modulo(3) == 0 and index < 18 %>
          <div class="col-xs-12 col-sm-12 col-md-4">
            <div class="align-center txt-shadow">
              <% if user_signed_in? %>
                <% if @fav_flg[@fav_cats[index].id] %>
                  <button id='fav-<%= index+1 %>' type='submit' class='favorite btn btn-lg' value='<%= @fav_cats[index].id %>' disabled>ふぁぼった</button>
                <% else %>
                  <button id='fav-<%= index+1 %>' type='submit' class='favorite btn btn-lg btn-favorite' value='<%= @fav_cats[index].id %>'>ふぁぼる</button>
                <% end %>
              <% end %>
              <%= link_to image_tag(@fav_cats[index].image_url, :class => 'img-responsive img-round'), @fav_cats[index].link %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-4">
            <div class="align-center txt-shadow">
              <% if user_signed_in? %>
                <% if @fav_flg[@fav_cats[index+1].id] %>
                  <button id='fav-<%= index+2 %>' type='submit' class='favorite btn btn-lg' value='<%= @fav_cats[index+1].id %>' disabled>ふぁぼった</button>
                <% else %>
                  <button id='fav-<%= index+2 %>' type='submit' class='favorite btn btn-lg btn-favorite' value='<%= @fav_cats[index+1].id %>'>ふぁぼる</button>
                <% end %>
              <% end %>
              <%= link_to image_tag(@fav_cats[index+1].image_url, :class => 'img-responsive img-round'), @fav_cats[index+1].link %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-4">
            <div class="align-center txt-shadow">
              <% if user_signed_in? %>
                <% if @fav_flg[@fav_cats[index+2].id] %>
                  <button id='fav-<%= index+3 %>' type='submit' class='favorite btn btn-lg' value='<%= @fav_cats[index+2].id %>' disabled>ふぁぼった</button>
                <% else %>
                  <button id='fav-<%= index+3 %>' type='submit' class='favorite btn btn-lg btn-favorite' value='<%= @fav_cats[index+2].id %>'>ふぁぼる</button>
                <% end %>
              <% end %>
              <%= link_to image_tag(@fav_cats[index+2].image_url, :class => 'img-responsive img-round'), @fav_cats[index+2].link %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
