<section id="ranking" class="home-section">
  <div class="container">
    <p class='text-ranking'><B>人気な子達 TOP30</B></p>
    <ol class="breadcrumb">
      <li><a href="/ranking/daily">Daily</a></li>
      <li class="active">Monthly</li>
      <li><a href="/ranking/total">Total</a></li>
    </ol>
    <div class="row">
      <% @fav_cats.each_with_index do |fav_cat, index| %>
        <div class="col-xs-12 col-sm-12 col-md-4">
          <div class="align-center txt-shadow">
            <p class='text-under-ranking'><B>ふぁぼランキング<%= index+1 %>位</B></p>
            <% if user_signed_in? %>
              <% if @fav_flg[fav_cat.id] %>
                <button type='submit' class='favorite btn btn-lg' value='<%= fav_cat.id %>' disabled>ふぁぼった</button>
              <% else %>
                <button type='submit' class='favorite btn btn-lg btn-favorite' value='<%= fav_cat.id %>'>ふぁぼる</button>
              <% end %>
            <% end %>
            <%= link_to image_tag(fav_cat[:image_url], :class => 'img-responsive img-round'), fav_cat[:link] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
